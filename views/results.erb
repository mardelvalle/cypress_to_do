<table class='table table-hover table-striped'>
  <p>Your transaction History</p>
  <% Transaction.each do |id, text| %>
    <tr>
      <th><%= text %></th>
      <td><%= @choice[id] || 0 %>
      <td><%= '#' * (@choice[id] || 0) %></td>
    </tr>
  <% end %>
</table>
<p><a href='/'>Record more transactions!</a></p>
